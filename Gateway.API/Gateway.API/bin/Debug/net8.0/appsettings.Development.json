{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "usuarios.api.public": {
        "ClusterId": "usuarios.api",
        "Order": 0,
        "Match": {
          "Path": "/api/Usuarios/crearUsuario"
        },
        "Transforms": [
          {
            "PathPattern": "/api/Usuarios/crearUsuario"
          }
        ]
      },

      "usuarios.api": {
        "ClusterId": "usuarios.api",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/api/Usuarios/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/Usuarios/{**catch-all}"
          }
        ]
      },

      "reservas.api": {
        "ClusterId": "reservas.api",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/api/Reservas/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/Reservas/{**catch-all}"
          }
        ]
      },

      "eventos.api": {
        "ClusterId": "eventos.api",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/api/events/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/events/{**catch-all}"
          }
        ]
      },

      "pagos.api": {
        "ClusterId": "pagos.api",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/api/Pagos/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/Pagos/{**catch-all}"
          }
        ]
      }
    },

    "Clusters": {
      "usuarios.api": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5183/"
          }
        }
      },

      "reservas.api": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:7021/"
          }
        }
      },

      "eventos.api": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:7010/"
          }
        }
      },

      "pagos.api": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5073/"
          }
        }
      }
    }
  }
}
